<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsExercise">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="5"
            android:id="@+id/linearLayout2">

        <ImageButton
                android:src="@drawable/oslob"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnOslob"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        <ImageButton
                android:src="@drawable/apo_island"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnApo"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        <ImageButton
                android:src="@drawable/great_wall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnChina"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        <ImageButton
                android:src="@drawable/kawasan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnKawasan"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        <ImageButton
                android:src="@drawable/rio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRio"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPlace"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" />

    <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bgStreetView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/txtPlace" />

</androidx.constraintlayout.widget.ConstraintLayout>