<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PassingIntentsExercise2">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Student Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginBottom="10sp" />

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"

                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:text="First Name"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFName"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Last Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLName"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGender"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Birth date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBirthDate"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Phone Number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Email Address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmailAddress"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Present Address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView20"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPresentAddress"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="High School"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHighSchool"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Strand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStrand"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Mother's Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMotherName"
                    android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Father's Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:layout_weight="3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFatherName"
                    android:layout_weight="7" />
        </LinearLayout>

        <Button
                android:text="Return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnReturnToIntentsExercise" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>